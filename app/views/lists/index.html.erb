<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Movie List</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4">Save your best movies</p>
      <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
        <%= link_to "My Lists", lists_path, class:"btn btn-primary btn-lg px-4 gap-3" %>
        <%= link_to "New List", new_list_path, class:"btn btn-primary btn-lg px-4 gap-3" %>
      </div>
    </div>
</div>

<div class="container mx-auto">
  <% @lists.each do |list| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= list.name %></h5>
          <%= link_to "Open", list_path(list) %>
      </div>
    </div>
  <% end %>
</div>
