<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold"><%= @list.name %></h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4">Your list for <%= @list.name %></p>
    <%= link_to 'Add a bookmark', new_list_bookmark_path(@list.id), class:"btn btn-success" %>
    </div>
</div>


<div class="container mx-auto d-flex">

  <% @list.bookmarks.each do |list| %>
    <div class="card mx-2" style="width: 18rem;">
      <img class="card-img-top" src="<%= list.movie.poster_url%>" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= list.movie.title %></h5>
        <p class="card-text"><%= list.movie.overview %></p>
        <%= link_to 'Delete', bookmark_path(list),
        data:{ turbo_method: :delete, turbo_confirm: 'You sure?'} %>
      </div>
    </div>
  <% end %>
</div>
